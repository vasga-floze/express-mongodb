<div class="row justify-content-md-center" style="margin-top: 30px;">
    <h1>Registro</h1>
    <div class="col-md-4">     

        <form method="POST" action="/register">
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input name="fullname" type="text" class="form-control" id="fullname" placeholder="Enter Full Name">
            </div>
                <div class="form-group">
                <label for="email">Email Address</label>
                <input name="email" type="email" class="form-control" id="email" placeholder="Enter Full email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Re-enter your password">
            </div>
            <a href="/" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}
    </div>
</div>